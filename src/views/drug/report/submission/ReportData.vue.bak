  try {
    // ç”ŸæˆCSVæ ¼å¼æ•°æ®
    const fileName = errorDialog.value.fileName || 'è´¨æ£€é”™è¯¯'
    const timestamp = new Date().toLocaleString('zh-CN', { 
      year: 'numeric', 
      month: '2-digit', 
