      hour: '2-digit',
      minute: '2-digit',
      second: '2-digit'
    }).replace(/\//g, '-').replace(/:/g, '-')
    
    // CSVè¡¨å¤´
    let csvContent = '\uFEFF' // UTF-8 BOMï¼Œç¡®ä¿Excelæ­£ç¡®è¯†åˆ«ä¸­æ–‡
    csvContent += 'åºå·,è¡Œå·,é”™è¯¯è¯¦æƒ…\n'
    
